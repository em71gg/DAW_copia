<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="obtenerMercado"
    tools:context=".BuscarMercado">

    <LinearLayout
        android:id="@+id/view_inicio"
        android:layout_width="291dp"
        android:layout_height="503dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/Insert_id_mdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Inserte Id del mercado a buscar"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_name_mdo"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="Nombre" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_ub_mdo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Lugar" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/view_inicio_mdo"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:hint="Inicio" />

        <TextView
            android:id="@+id/view_fin_mdo"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="Fin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7C4DFF"
            android:onClick="obtenerMercado"
            android:text="Buscar" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B388FF"
            android:onClick="limpiarEntrada"
            android:text="Borrar Registro"
            android:textColorLink="#FFE57F" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8C9EFF"
            android:onClick="listarMercados"
            android:text="Ver todos los mercados" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#40C4FF"
            android:onClick="editarMercado"
            android:text="Actualizar Mercado" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>